# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
	output_format = i3bar
        colors   = true
        interval = 2
        color_good     = "#F9FAF9"
	color_degraded = "#b4b4b4"
        color_bad      = "#6d401b"
}

order += "cpu_usage"
#order += "memory"
order += "disk /"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery 1"
order += "tztime local"
order += "disk /tmp"


cpu_usage {
        format = "cpu  %usage"
	max_threshold = 90
}

load {
        format = "load %1min"
        max_threshold = 0.3
}

disk "/" {
        format = "⛁ %avail"
}

#for seperators
disk "/tmp" {
	format = " "
}

ethernet _first_ {
        format_up = "lan: %ip"
        format_down=""
}

wireless _first_ {
	format_up   = "wlan: %ip"
        format_down = ""
}

battery 1 {
        format = " %status %percentage "
        last_full_capacity = true
        integer_battery_capacity = true
	format_down    = "∅"
        status_chr     = ""
        status_bat     = " "
        status_unk     = "*"
        status_full    = " "
        low_threshold  = 20
        threshold_type = time
}

memory {
        format = "ram %percentage_used"
        threshold_degraded = "10%"
	threshold_critical = "5%"
        format_degraded = "ram %percentage_used"
}

tztime local {
        format = " %m/%d/%Y %I:%M%p "
}
